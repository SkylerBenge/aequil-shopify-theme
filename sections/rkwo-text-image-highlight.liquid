{%- liquid
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign cta_text = section.settings.cta_text
  assign cta_url = section.settings.cta_url
  assign image = section.settings.image
  assign section_id = section.id
-%}

<section class="rkwo-text-image-highlight" id="section-{{ section_id }}">
  <div class="rkwo-text-image-highlight-container">
    <!-- Left Side -->
    <div class="rkwo-text-image-highlight-content">
      <div>
        {%- if heading != blank -%}
            <h2 class="rkwo-text-image-highlight-content-heading rkwo-aequil-heading">
              {% assign words = heading | split: ' ' %}
              {% if words.size > 1 %}
                {% assign last_index = words.size | minus: 1 %}
                {% assign first_words = words | slice: 0, last_index %}
                {{ first_words | join: ' ' }} <span>{{ words[last_index] }}</span>
              {% else %}
                {{ heading }}
              {% endif %}
            </h2>
          {%- endif -%}
          {%- if content != blank -%}
            <div class="rkwo-text-image-highlight-content-content">
              {{ content }}
            </div>
          {%- endif -%}
          {%- if cta_text != blank -%}
            <a class="rkwo-button" href="{{ cta_url }}">{{ cta_text }}</a>
          {%- endif -%}
      </div>
    </div>
    <!-- Right Side -->
    {%- if image -%}
    <div class="rkwo-text-image-highlight-image" style="background-image: url({{ image | img_url: '1000x1000' }});"></div>
    {%- endif -%}
  </div>
</section>

<style>
  .rkwo-text-image-highlight {
    width: 100%;
    display: table;
    background-color: #cec6b9;
    padding: 0;
    background-image: url( '{{ 'aq-background.svg' | asset_url }}' );
    background-size: 40%;
    background-position: center left;
    background-repeat: no-repeat;
  }
  .rkwo-text-image-highlight-container {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
  }
  .rkwo-text-image-highlight-image,
  .rkwo-text-image-highlight-content {
    width: 50%;
    display: table-cell !important;
    vertical-align: top;
  }
  .rkwo-text-image-highlight-content {
    padding: 75px 50px 100px 50px;
  }
  .rkwo-text-image-highlight-image {
    height: 100%;
    background-size: 450px;
    background-position: center bottom;
    background-repeat: no-repeat;
  }

  @media (max-width: 1700px) {

  }

  @media (max-width: 1024px) {
    .rkwo-text-image-highlight-container {
        padding-top: 0;
        display: flex;
        flex-direction: column-reverse;
    }
    .rkwo-text-image-highlight-image {
        min-height: 400px;
        background-size: 350px;
        width: 100%;
        background-color: #ecebe8;
    }
    .rkwo-text-image-highlight-content {
      width: 100%;
      padding: 50px;
    }
    .rkwo-text-image-highlight-content h2 {
      margin-top: 0;
    }
  }

  @media (max-width: 768px) {
    .rkwo-text-image-highlight-image {
        min-height: 300px;
        background-size: contain;
    }
    .rkwo-text-image-highlight-content {
      padding: 35px;
    }
    .rkwo-text-image-highlight-content-content + .rkwo-button {
      margin-top: 2em;
    }
  }

  @media (max-width: 480px) {
    .rkwo-text-image-highlight-image {
        min-height: 200px;
    }
    .rkwo-text-image-highlight-content {
      padding: 35px 25px;
    }
  }
</style>

{% schema %}
{
  "name": "RKWO Text Image Highlight",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Enter a CTA text anchor"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL",
      "info": "Enter a CTA URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image",
      "info": "Upload an image"
    }
  ],
  "presets": [
    {
      "name": "RKWO Text Image Highlight"
    }
  ]
}
{% endschema %}