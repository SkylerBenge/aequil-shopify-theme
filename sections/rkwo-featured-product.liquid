{%- liquid
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign cta_text = section.settings.cta_text
  assign cta_url = section.settings.cta_url
  assign image = section.settings.image
  assign section_id = section.id
-%}

<section class="rkwo-featured-product" id="section-{{ section_id }}">
  <div class="rkwo-featured-product-container">
    <!-- Left Side -->
    <div class="rkwo-featured-product-content">
      <div>
        {%- if heading != blank -%}
            <h2 class="rkwo-featured-product-content-heading rkwo-aequil-heading">
              {% assign words = heading | split: ' ' %}
              {% if words.size > 1 %}
                {% assign last_index = words.size | minus: 1 %}
                {% assign first_words = words | slice: 0, last_index %}
                {{ first_words | join: ' ' }} <span>{{ words[last_index] }}</span>
              {% else %}
                {{ heading }}
              {% endif %}
            </h2>
          {%- endif -%}
          <hr />
          <h4>This product includes:</h4>
          {%- for block in section.blocks -%}
            <div class="rkwo-featured-product-point">
              {%- if block.settings.point_heading != blank -%}
                <h3 class="rkwo-featured-product-point-heading">{{ block.settings.point_heading }}</h3>
              {%- endif -%}
              <div>
              {%- if block.settings.point_content != blank -%}
                  <div class="rkwo-featured-product-point-content"><p>{{ block.settings.point_content }}</p></div>
                {%- endif -%}
                <div class="rkwo-featured-prodct-point-pricewrap">
                  {%- if block.settings.point_content != blank -%}
                    <span class="rkwo-featured-product-point-pricenow">{{ block.settings.point_price_now }}</span>
                  {%- endif -%}
                  {%- if block.settings.point_content != blank -%}
                    <span class="rkwo-featured-product-point-pricebefore">{{ block.settings.point_price_before }}</span>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
          <hr />
          <div class="rkwo-featured-prodct-total-wrap">
          <h4> Total</h4>
          <span>Â£??</span>
          </div>
          {%- if cta_text != blank -%}
            <a class="rkwo-button" href="{{ cta_url }}">{{ cta_text }}</a>
          {%- endif -%}
      </div>
    </div>
    <!-- Right Side -->
    {%- if image -%}
    <div class="rkwo-featured-product-image" style="background-image: url({{ image | img_url: '1000x1000' }});"></div>
    {%- endif -%}
  </div>
</section>

<style>
  .rkwo-featured-product {
    width: 100%;
    display: table;
    background-color: #ecebe8;
    padding: 0;
    background-image: url( '{{ 'aq-background.svg' | asset_url }}' );
    background-size: 40%;
    background-position: center left;
    background-repeat: no-repeat;
  }
  .rkwo-featured-product-container {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    display: table;
  }
  .rkwo-featured-product-image,
  .rkwo-featured-product-content {
    width: 50%;
    display: table-cell !important;
    vertical-align: top;
  }
  .rkwo-featured-product-content {
    padding: 75px 50px 100px 50px;
  }
  .rkwo-featured-product-image {
    height: 100%;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }
  .rkwo-featured-product-content hr {
    margin: 25px 0;
  }
  .rkwo-featured-product-point > div,
  .rkwo-featured-prodct-total-wrap {
    display: flex;
    justify-content: space-between;
  }
  .rkwo-featured-prodct-total-wrap {
    margin-bottom: 25px;
  }
  .rkwo-featured-product-point > div > div,
  .rkwo-featured-prodct-total-wrap > h4,
  .rkwo-featured-prodct-total-wrap > span {
    vertical-align: middle;
  }
  section[class^=rkwo-] .rkwo-featured-product-point-content p {
    color: #999999 !important;
  }
  .rkwo-featured-product-point .rkwo-featured-product-point-heading {
    margin-bottom: 0;
  }
  .rkwo-featured-product-point .rkwo-featured-product-point-content p,
  .rkwo-featured-product-content h4 {
    margin: 0;
  }
  .rkwo-featured-prodct-point-pricewrap {
    display: inline-table;
  }
  .rkwo-featured-prodct-point-pricewrap > span {
    display: table-cell;
    vertical-align: middle;
  }
  .rkwo-featured-prodct-point-pricewrap span.rkwo-featured-product-point-pricenow {
    font-weight: 400;
  }
  .rkwo-featured-prodct-point-pricewrap span.rkwo-featured-product-point-pricebefore {
    padding-left: 10px;
    text-decoration: line-through;
  }

  @media (max-width: 1700px) {

  }

  @media (max-width: 1024px) {
    .rkwo-featured-product-container {
        padding-top: 0;
        display: flex;
        flex-direction: column-reverse;
    }
    .rkwo-featured-product-image {
        min-height: 400px;
        background-size: 350px;
        width: 100%;
        background-color: #ecebe8;
    }
    .rkwo-featured-product-content {
      width: 100%;
      padding: 50px;
    }
    .rkwo-featured-product-content h2 {
      margin-top: 0;
    }
  }

  @media (max-width: 768px) {
    .rkwo-featured-product-image {
        min-height: 300px;
        background-size: contain;
    }
    .rkwo-featured-product-content {
      padding: 35px;
    }
    .rkwo-featured-product-content-content + .rkwo-button {
      margin-top: 2em;
    }
  }

  @media (max-width: 480px) {
    .rkwo-featured-product-image {
        min-height: 200px;
    }
    .rkwo-featured-product-content {
      padding: 35px 25px;
    }
  }
</style>

{% schema %}
{
  "name": "RKWO Featred Product",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Enter a CTA text anchor"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL",
      "info": "Enter a CTA URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image",
      "info": "Upload an image"
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Point",
      "settings": [
        {
          "type": "text",
          "id": "point_heading",
          "label": "Point Heading",
          "default": "Point 1"
        },
        {
          "type": "text",
          "id": "point_content",
          "label": "Point Content",
          "default": "Content 1"
        },
        {
          "type": "text",
          "id": "point_price_now",
          "label": "Price Now",
        },
        {
          "type": "text",
          "id": "point_price_before",
          "label": "Price Before",
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RKWO Featred Product",
      "blocks": [
        {
          "type": "point"
        },
        {
          "type": "point"
        },
        {
          "type": "point"
        }
      ]
    }
  ]
}
{% endschema %}