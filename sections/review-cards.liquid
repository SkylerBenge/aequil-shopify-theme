  "name": "Review Cards",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Customer Reviews"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "cards_per_row",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Cards per row (Desktop)",
      "default": 3
    },
    {
      "type": "select",
      "id": "mobile_cards_per_row",
      "options": [
        {
          "value": "1",
          "label": "1 card per row"
        },
        {
          "value": "2",
          "label": "2 cards per row"
        }
      ],
      "default": "1",
      "label": "Cards per row (Mobile)"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review Card",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Review Title",
          "default": "Amazing Product!"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Reviewer Name",
          "default": "John D."
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Star Rating",
          "default": 5
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Review Text",
          "default": "<p>This product exceeded my expectations. The quality is outstanding and I would definitely recommend it to others.</p>"
        }
