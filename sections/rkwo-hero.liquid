{%- liquid
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign highlight = section.settings.highlight
  assign image = section.settings.image
  assign section_id = section.id
-%}

<section class="rkwo-hero rkwo-content-white" id="section-{{ section_id }}">
    {%- if image -%}
      <div class="rkwo-hero-mobile-image" style="display: none;"></div>
    {%- endif -%}
    <div class="rkwo-hero-content">
      {%- if highlight != blank -%}
        <div class="rkwo-hero-content-highlight">
          <span><img src="https://cdn.shopify.com/s/files/1/0652/1860/9385/files/Stars-white.png" alt="Stars" /></span><span>{{ highlight }}</span>
        </div>
      {%- endif -%}
      {%- if heading != blank -%}
        <h1 class="rkwo-hero-content-heading rkwo-aequil-heading">
          {% assign words = heading | split: ' ' %}
          {% if words.size > 1 %}
            {% assign last_index = words.size | minus: 1 %}
            {% assign first_words = words | slice: 0, last_index %}
            {{ first_words | join: ' ' }} <span>{{ words[last_index] }}</span>
          {% else %}
            {{ heading }}
          {% endif %}
        </h1>
      {%- endif -%}
      {%- if content != blank -%}
        <div class="rkwo-hero-content-content">
          {{ content }}
        </div>
      {%- endif -%}
  </div>
  <div class="rkwo-hero-gradient"></div>
</section>

<style>
  .rkwo-hero,
  .rkwo-hero-mobile-image{
    width: 100%;
    padding: 150px 50px 100px 50px;
    position: relative;
    background-color: #ffffff;
    {%- if image -%}
    background-image: url({{ image | img_url: '2000x2000' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {%- endif -%}
  }
  .rkwo-hero-content {
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    z-index: 2;
    position: relative;
  }
  .rkwo-hero-content h1,
  .rkwo-hero-content p {text-align: center;}

  .rkwo-hero-content h1 {
    font-size: 48px;
    margin-top: 0;
    margin-bottom: 35px;}

  .rkwo-hero-content-highlight {
    border: 1px solid #ffffff;
    padding: 5px 15px;
    border-radius: 15px;
    display: inline-block;
    margin-bottom: 15px;
  }
  .rkwo-hero-content-highlight p {margin-bottom: 0;}

  .rkwo-hero-content-highlight span {
    display: inline-block;
    vertical-align: middle;
  }
  .rkwo-hero-content-highlight span:first-of-type {
    margin-right: 5px;
    margin-top: 5px;
  }
  .rkwo-hero-content-highlight span img {
    width: 100px;
    height: auto;
  }

  .rkwo-hero-gradient {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: block !important;
    background: linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(69,66,62,0) 50%,rgba(137,131,123,1) 100%);
    z-index: 1;
  }
  
  @media (max-width: 1700px) {
     
  }
  
  @media (max-width: 1024px) {
    
  }

  @media (max-width: 768px) {
    .rkwo-hero {
      background-image: none;
      padding: 0;
    }

    .rkwo-hero-content h1 {
      font-size: 38px;
    }
    .rkwo-hero-content-highlight {
      padding: 2px 10px;
      font-size: 10px;
    }
    .rkwo-hero-content-highlight span img {
      width: 75px;
    }

    .rkwo-hero-mobile-image {
      display: block !important;
      min-height: 300px;
    }
    .rkwo-hero-gradient {
      display: none !important;
    }
    section[class^=rkwo-].rkwo-content-white h1,
    section[class^=rkwo-].rkwo-content-white p {
      color: #000000 !important;
    }
    .rkwo-hero-content {
      padding: 35px;
    }
    .rkwo-hero-content-highlight {
      border-color: #000000;
    }
    .rkwo-hero-content-highlight span img {
      -ms-filter: brightness(0);
      -moz-filter: brightness(0);
      -webkit-filter: brightness(0);
      filter: brightness(0);
    }
  }
  
  @media (max-width: 480px) {
    .rkwo-hero-mobile-image {
      min-height: 250px;
    }
    .rkwo-hero-content h1 {
      font-size: 30px;
      margin-bottom: 15px;
    }
    .rkwo-hero-content {
      padding: 35px 25px;
    }
  }
  
  @media (max-width: 360px) {
    .rkwo-hero-content-highlight span img {
      width: 22vw;
    }
    .rkwo-hero-content-highlight p {
      font-size: 3.5vw !important;
    }
  }
</style>

{% schema %}
{
  "name": "RKWO Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading", 
      "label": "Main Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content</p>"
    },
    {
      "type": "richtext",
      "id": "highlight", 
      "label": "Highlight",
      "default": "<p>Enter a highlight</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image",
      "info": "Upload an image"
    }
  ],
  "presets": [
    {
      "name": "RKWO Hero"
    }
  ]
}
{% endschema %}