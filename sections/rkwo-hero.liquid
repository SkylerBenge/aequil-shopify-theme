{%- liquid
  assign heading = section.settings.heading
  assign content = section.settings.content
  assign highlight = section.settings.highlight
  assign image = section.settings.image
  assign background_type = section.settings.background_type
  assign video = section.settings.video
  assign video_poster = section.settings.video_poster
  assign section_id = section.id
-%}

<section class="rkwo-hero rkwo-content-white" id="section-{{ section_id }}">
        {%- if background_type == 'video' and video -%}
      <!-- Video Element (hidden initially) -->
      <video
        class="rkwo-hero-video"
        playsinline="playsinline"
        muted="muted"
        loop="loop"
        autoplay="autoplay"
        preload="metadata"
        {%- if video_poster -%}
        poster="{{ video_poster | img_url: '1920x1080' }}"
        {%- endif -%}
      >
        {%- if video.sources -%}
          {%- for source in video.sources -%}
            <source src="{{ source.url }}" type="{{ source.mime_type }}">
          {%- endfor -%}
        {%- endif -%}
        {%- if video_poster -%}
          <img src="{{ video_poster | img_url: '1920x1080' }}" alt="Video poster">
        {%- endif -%}
      </video>


    {%- endif -%}

    {%- if image != blank or background_type == 'video' -%}
      <div class="rkwo-hero-mobile-image" style="display: none;">
        {%- if background_type == 'video' and video -%}

        {%- endif -%}
        {%- if heading != blank -%}
          <h1 class="rkwo-hero-content-heading rkwo-aequil-heading" style="color: #ffffff !important;">
            {% assign words = heading | split: ' ' %}
            {% if words.size > 1 %}
              {% assign last_index = words.size | minus: 1 %}
              {% assign first_words = words | slice: 0, last_index %}
              {{ first_words | join: ' ' }} <span>{{ words[last_index] }}</span>
            {% else %}
              {{ heading }}
            {% endif %}
          </h1>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="rkwo-hero-content">
      {%- if highlight != blank -%}
        <div class="rkwo-hero-content-highlight">
          <span><img src="https://cdn.shopify.com/s/files/1/0652/1860/9385/files/Stars-white.png" alt="Stars" width="100" height="20" /></span><span>{{ highlight }}</span>
        </div>
      {%- endif -%}
      {%- if heading != blank -%}
        <h1 class="rkwo-hero-content-heading rkwo-aequil-heading">
          {% assign words = heading | split: ' ' %}
          {% if words.size > 1 %}
            {% assign last_index = words.size | minus: 1 %}
            {% assign first_words = words | slice: 0, last_index %}
            {{ first_words | join: ' ' }} <span>{{ words[last_index] }}</span>
          {% else %}
            {{ heading }}
          {% endif %}
        </h1>
      {%- endif -%}
      {%- if content != blank -%}
        <div class="rkwo-hero-content-content">
          {{ content }}
        </div>
      {%- endif -%}
      {%- if section.settings.link_url != blank and section.settings.link_text != blank or section.settings.link_url_2 != blank and section.settings.link_text_2 != blank -%}
        <div class="rkwo-hero-content-link">
          {%- if section.settings.link_url != blank and section.settings.link_text != blank -%}
            <a href="{{ section.settings.link_url }}" class="rkwo-hero-link rkwo-hero-link-primary">
              {{ section.settings.link_text }}
            </a>
          {%- endif -%}
          {%- if section.settings.link_url_2 != blank and section.settings.link_text_2 != blank -%}
            <a href="{{ section.settings.link_url_2 }}" class="rkwo-hero-link rkwo-hero-link-secondary">
              {{ section.settings.link_text_2 }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
  </div>
  <div class="rkwo-hero-gradient"></div>
</section>

<style>
  .rkwo-hero,
  .rkwo-hero-mobile-image{
    width: 100%;
    padding: 150px 50px 100px 50px;
    position: relative;
    background-color: #ffffff;
    {%- if background_type == 'image' and image -%}
    background-image: url({{ image | img_url: '2000x2000' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {%- elsif background_type == 'video' and video_poster -%}
    background-image: url({{ video_poster | img_url: '2000x2000' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {%- endif -%}
  }

  .rkwo-hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }


  .rkwo-hero-content {
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    z-index: 2;
    position: relative;
  }
  .rkwo-hero-content h1,
  .rkwo-hero-content p {text-align: center;}

  .rkwo-hero-content h1 {
    font-size: 48px;
    margin-top: 0;
    margin-bottom: 35px;}

  .rkwo-hero-content-highlight {
    border: 1px solid #ffffff;
    padding: 5px 15px;
    border-radius: 15px;
    display: inline-block;
    margin-bottom: 15px;
  }
  .rkwo-hero-content-highlight p {margin-bottom: 0;}

  .rkwo-hero-content-highlight span {
    display: inline-block;
    vertical-align: middle;
  }
  .rkwo-hero-content-highlight span:first-of-type {
    margin-right: 5px;
    margin-top: 5px;
  }
  .rkwo-hero-content-highlight span img {
    width: 100px;
    height: auto;
  }

  .rkwo-hero-content-link {
    margin-top: 30px;
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .rkwo-hero-link {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 25px;
    text-decoration: none;
    font-family: 'Avenir', sans-serif;
    font-weight: 400;
    font-size: 16px;
    transition: all 0.3s ease;
    border: 2px solid #6f9fcf;
  }

  .rkwo-hero-link-primary {
    background-color: #6f9fcf;
    color: white;
  }

  .rkwo-hero-link-primary:hover {
    background-color: #5a8bb8;
    border-color: #5a8bb8;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(111, 159, 207, 0.3);
  }

  .rkwo-hero-link-secondary {
    background-color: transparent;
    color: #6f9fcf;
  }

  .rkwo-hero-link-secondary:hover {
    background-color: #6f9fcf;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(111, 159, 207, 0.3);
  }

  .rkwo-hero-gradient {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: block !important;
    background: rgba(0,0,0,0.2);
    z-index: 1;
  }

  @media (max-width: 1700px) {

  }

  @media (max-width: 1024px) {

  }

  @media (max-width: 768px) {
    .rkwo-hero-content-heading {
      text-align: center;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      margin: 0;
      background: rgba(0, 0, 0, .1);
      display: flex;
      flex-direction: column;
      width: 100%;
      justify-content: end;
      z-index: 2;
    }
    .rkwo-hero-content .rkwo-hero-content-heading {
      display: none;
    }
    .rkwo-hero {
      background-image: none;
      padding: 0;
    }

    .rkwo-hero-content h1 {
      font-size: 38px;
    }
    .rkwo-hero-content-highlight {
      padding: 2px 10px;
      font-size: 10px;
    }
    .rkwo-hero-content-highlight span img {
      width: 75px;
    }

        .rkwo-hero-mobile-image {
      display: block !important;
      min-height: 300px;
      {%- if background_type == 'image' and image -%}
      background-image: url({{ image | img_url: '1200x800' }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      {%- elsif background_type == 'video' and video_poster -%}
      background-image: url({{ video_poster | img_url: '1200x800' }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      {%- endif -%}
    }



    .rkwo-hero-gradient {
      display: none !important;
    }
    section[class^=rkwo-].rkwo-content-white h1,
    section[class^=rkwo-].rkwo-content-white p {
      color: #555557 !important;
    }
    .rkwo-hero-content {
      padding: 35px;
    }
    .rkwo-hero-content-highlight {
      border-color: #000000;
    }
    .rkwo-hero-content-highlight span img {
      -ms-filter: brightness(0);
      -moz-filter: brightness(0);
      -webkit-filter: brightness(0);
      filter: brightness(0);
    }
  }

  @media (max-width: 480px) {
    .rkwo-hero-mobile-image {
      min-height: 250px;
    }
    .rkwo-hero-content h1 {
      font-size: 30px;
      margin-bottom: 15px;
    }
    .rkwo-hero-content {
      padding: 35px 25px;
    }
  }

  @media (max-width: 360px) {
    .rkwo-hero-content-highlight span img {
      width: 22vw;
    }
    .rkwo-hero-content-highlight p {
      font-size: 3.5vw !important;
    }
  }
</style>



{% schema %}
{
  "name": "RKWO Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content</p>"
    },
    {
      "type": "richtext",
      "id": "highlight",
      "label": "Highlight",
      "default": "<p>Enter a highlight</p>"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image",
      "info": "Upload an image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background Video",
      "info": "Upload a video file for background. Recommended: MP4 format, under 10MB"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Fallback image shown before video loads or on mobile devices"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_text_2",
      "label": "Second Link Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link_url_2",
      "label": "Second Link URL"
    }
  ],
  "presets": [
    {
      "name": "RKWO Hero"
    }
  ]
}
{% endschema %}