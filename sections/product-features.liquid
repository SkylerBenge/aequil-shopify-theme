{%- liquid
  assign background_color = section.settings.background_color
  assign link_url = section.settings.link_url
  assign link_text = section.settings.link_text
  assign link_url_2 = section.settings.link_url_2
  assign link_text_2 = section.settings.link_text_2
  assign desktop_columns = section.settings.desktop_columns
  assign section_id = section.id
-%}

<section class="product-features" id="section-{{ section_id }}" style="background-color: {{ background_color }};">
  <div class="product-features__container">

    {%- if section.blocks.size > 0 -%}
      <div class="product-features__blocks">
        {%- for block in section.blocks -%}
          <div class="product-features__block" {{ block.shopify_attributes }}>
            {%- if block.settings.svg_icon != blank -%}
              <div class="product-features__icon">
                {{ block.settings.svg_icon }}
              </div>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h3 class="product-features__title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <div class="product-features__text">
                {{ block.settings.text }}
              </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if link_url != blank and link_text != blank or link_url_2 != blank and link_text_2 != blank -%}
      <div class="rkwo-hero-content-link">
        {%- if link_url != blank and link_text != blank -%}
          <a href="{{ link_url }}" class="rkwo-hero-link rkwo-hero-link-primary">
            {{ link_text }}
          </a>
        {%- endif -%}
        {%- if link_url_2 != blank and link_text_2 != blank -%}
          <a href="{{ link_url_2 }}" class="rkwo-hero-link rkwo-hero-link-secondary">
            {{ link_text_2 }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .product-features {
    width: 100%;
    padding: 80px 50px;
    position: relative;
  }

  .product-features__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .product-features__blocks {
    display: grid;
    grid-template-columns: repeat({{ desktop_columns | default: 3 }}, 1fr);
    gap: 40px;
    margin-bottom: 60px;
  }

  .product-features__block {
    padding: 30px 20px;
    text-align: center;
  }

  .product-features__icon {
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-features__icon svg {
    width: 100px;
    max-width: 100%;
    height: auto;
  }

  .product-features__title {
    font-size: 24px;
    font-weight: bold;
    margin: 0 0 15px 0;
    color: #fff;
  }

  .product-features__text {
    font-size: 16px;
    line-height: 1.6;
    color: #fff;
    margin: 0;
    text-align: center;
  }

  .product-features__text p {
    margin: 0 0 15px 0;
  }

  .product-features__text p:last-child {
    margin-bottom: 0;
  }

  /* Use rkwo-hero-content-link styling */
  .rkwo-hero-content-link {
    margin-top: 30px;
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .rkwo-hero-link {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 25px;
    text-decoration: none;
    font-family: 'Avenir', sans-serif;
    font-size: 16px;
    transition: all 0.3s ease;
    border: 2px solid #6f9fcf;
    margin: 0 10px;
  }

  .rkwo-hero-link-primary {
    background-color: #ecebe8;
    color: #333;
    border-color: #ecebe8;
  }

  .rkwo-hero-link-primary:hover {
    background-color: #ddd9d4;
    border-color: #ddd9d4;
    transform: translateY(-2px);
  }

  .rkwo-hero-link-secondary {
    background-color: transparent;
    color: #fff;
    border-color: #fff;
  }

  .rkwo-hero-link-secondary:hover {
    background-color: #6f9fcf;
    color: white;
    transform: translateY(-2px);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .product-features {
      padding: 60px 25px;
    }

    .product-features__blocks {
      grid-template-columns: 1fr;
      gap: 30px;
      margin-bottom: 40px;
    }

    .product-features__block {
      padding: 20px 15px;
    }

    .product-features__icon svg {
      width: 50px;
      height: 50px;
    }

    .product-features__title {
      font-size: 20px;
    }

    .product-features__text {
      font-size: 14px;
    }

    .rkwo-hero-content-link {
      flex-direction: column;
      align-items: center;
    }

    .rkwo-hero-link {
      width: 100%;
      max-width: 280px;
      margin: 5px 0;
    }
  }

  @media (max-width: 480px) {
    .product-features {
      padding: 40px 20px;
    }

    .product-features__title {
      font-size: 18px;
    }

    .product-features__text {
      font-size: 13px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "label": "Desktop Columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Primary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link_url_2",
      "label": "Secondary Button Link"
    },
    {
      "type": "text",
      "id": "link_text_2",
      "label": "Secondary Button Text",
      "default": "Shop Now"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "html",
          "id": "svg_icon",
          "label": "SVG Icon",
          "info": "Paste your SVG code here"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Feature description goes here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Quality Materials",
            "text": "<p>Made with premium materials for lasting durability.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Expert Craftsmanship",
            "text": "<p>Carefully crafted by skilled artisans.</p>"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Satisfaction Guaranteed",
            "text": "<p>100% satisfaction guarantee or your money back.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
