{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign content = section.settings.content
  assign image = section.settings.image
  assign desktop_layout = section.settings.desktop_layout
  assign section_id = section.id
-%}

<section class="page-content" id="section-{{ section_id }}">
  <!-- Hero Section with Image and Content -->
  <div class="page-content__hero">
    {%- if image -%}
      <!-- Mobile: Image at top -->
      <div class="page-content__mobile-image">
        {{
          image
          | image_url: width: 1200
          | image_tag:
            class: 'page-content__image',
            sizes: '100vw',
            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
        }}
        <div class="page-content__mobile-overlay">
          {%- if heading != blank -%}
            <h1 class="page-content__heading">{{ heading }}</h1>
          {%- endif -%}
          {%- if subheading != blank -%}
            <h2 class="page-content__subheading">{{ subheading }}</h2>
          {%- endif -%}
          {%- if content != blank -%}
            <div class="page-content__text">{{ content }}</div>
          {%- endif -%}
        </div>
      </div>

      <!-- Desktop: Side-by-side layout -->
      <div class="page-content__desktop-layout page-content__desktop-layout--{{ desktop_layout }}">
        <div class="page-content__image-container">
          {{
            image
            | image_url: width: 1200
            | image_tag:
              class: 'page-content__image',
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
          }}
        </div>
        <div class="page-content__content-container">
          <div class="page-content__content-overlay">
            {%- if heading != blank -%}
              <h1 class="page-content__heading">{{ heading }}</h1>
            {%- endif -%}
            {%- if subheading != blank -%}
              <h2 class="page-content__subheading">{{ subheading }}</h2>
            {%- endif -%}
            {%- if content != blank -%}
              <div class="page-content__text">{{ content }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- else -%}
      <!-- No image: just content -->
      <div class="page-content__content-only">
        {%- if heading != blank -%}
          <h1 class="page-content__heading">{{ heading }}</h1>
        {%- endif -%}
        {%- if subheading != blank -%}
          <h2 class="page-content__subheading">{{ subheading }}</h2>
        {%- endif -%}
        {%- if content != blank -%}
          <div class="page-content__text">{{ content }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

  <!-- Collapsible Content Blocks -->
  {%- if section.blocks.size > 0 -%}
    <div class="page-content__collapsible-section">
      <div class="page-content__blocks">
        {%- for block in section.blocks -%}
          <div class="page-content__accordion" {{ block.shopify_attributes }}>
            <details
              id="Details-{{ block.id }}-{{ section.id }}"
              {% if section.settings.open_first_block and forloop.first %}open{% endif %}
            >
              <summary id="Summary-{{ block.id }}-{{ section.id }}">
                {% render 'icon-accordion', icon: block.settings.icon %}
                <h3 class="page-content__accordion-title">
                  {{ block.settings.heading | default: block.settings.page.title | escape }}
                </h3>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <div
                class="page-content__accordion-content"
                id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                role="region"
                aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
              >
                {{ block.settings.row_content }}
                {{ block.settings.page.content }}
              </div>
            </details>
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</section>

<style>
  /* Base Section Styles */
  .page-content {
    width: 100%;
    position: relative;
  }

  /* Hero Section Styles */
  .page-content__hero {
    position: relative;
    width: 100%;
  }

  .page-content__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile Layout - Image at top, content stacked below */
  .page-content__mobile-image {
    display: block;
    position: relative;
    min-height: 400px;
    background: #f5f5f5;
  }

  .page-content__mobile-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    padding: 40px 20px 30px;
    color: white;
    text-align: center;
  }

  /* Desktop Layout - Side by side */
  .page-content__desktop-layout {
    display: none;
    grid-template-columns: 1fr 1fr;
    min-height: 500px;
    align-items: center;
  }

  .page-content__desktop-layout--left {
    grid-template-areas: "image content";
  }

  .page-content__desktop-layout--right {
    grid-template-areas: "content image";
  }

  .page-content__image-container {
    position: relative;
    height: 100%;
    min-height: 500px;
  }

  .page-content__desktop-layout--left .page-content__image-container {
    grid-area: image;
  }

  .page-content__desktop-layout--right .page-content__image-container {
    grid-area: image;
  }

  .page-content__content-container {
    position: relative;
    padding: 60px 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
  }

  .page-content__desktop-layout--left .page-content__content-container {
    grid-area: content;
  }

  .page-content__desktop-layout--right .page-content__content-container {
    grid-area: content;
  }

  .page-content__content-overlay {
    max-width: 500px;
    text-align: center;
  }

  /* Content Only Layout */
  .page-content__content-only {
    padding: 80px 20px;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Typography */
  .page-content__heading {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .page-content__subheading {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    opacity: 0.9;
  }

  .page-content__text {
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  .page-content__text p {
    margin-bottom: 1rem;
  }

  .page-content__text p:last-child {
    margin-bottom: 0;
  }

  /* Collapsible Section Styles */
  .page-content__collapsible-section {
    padding: 60px 20px;
    background: #f9f9f9;
  }

  .page-content__blocks {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-content__accordion {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
  }

  .page-content__accordion:last-child {
    margin-bottom: 0;
  }

  .page-content__accordion summary {
    padding: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 15px;
    background: white;
    transition: background-color 0.2s ease;
    list-style: none;
  }

  .page-content__accordion summary::-webkit-details-marker {
    display: none;
  }

  .page-content__accordion summary:hover {
    background: #f5f5f5;
  }

  .page-content__accordion-title {
    flex: 1;
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .page-content__accordion summary .icon-accordion {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .page-content__accordion summary svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .page-content__accordion[open] summary svg {
    transform: rotate(180deg);
  }

  .page-content__accordion-content {
    padding: 0 20px 20px;
    color: #666;
    line-height: 1.6;
  }

  .page-content__accordion-content p {
    margin-bottom: 1rem;
  }

  .page-content__accordion-content p:last-child {
    margin-bottom: 0;
  }

  /* Tablet Styles */
  @media screen and (min-width: 750px) {
    .page-content__mobile-image {
      display: none;
    }

    .page-content__desktop-layout {
      display: grid;
    }

    .page-content__heading {
      font-size: 3rem;
    }

    .page-content__subheading {
      font-size: 1.8rem;
    }

    .page-content__text {
      font-size: 1.2rem;
    }

    .page-content__collapsible-section {
      padding: 80px 40px;
    }

    .page-content__blocks {
      max-width: 900px;
    }

    .page-content__accordion summary {
      padding: 25px;
    }

    .page-content__accordion-content {
      padding: 0 25px 25px;
    }

    .page-content__accordion-title {
      font-size: 1.3rem;
    }
  }

  /* Desktop Styles */
  @media screen and (min-width: 990px) {
    .page-content__content-container {
      padding: 80px 60px;
    }

    .page-content__heading {
      font-size: 3.5rem;
    }

    .page-content__subheading {
      font-size: 2rem;
    }

    .page-content__collapsible-section {
      padding: 100px 60px;
    }

    .page-content__blocks {
      max-width: 1000px;
    }
  }

  /* Large Desktop */
  @media screen and (min-width: 1200px) {
    .page-content__content-container {
      padding: 100px 80px;
    }
  }
</style>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image",
      "info": "Recommended: 1200x600px or larger"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "Desktop Layout",
      "options": [
        {
          "value": "left",
          "label": "Image Left, Content Right"
        },
        {
          "value": "right",
          "label": "Content Left, Image Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Page Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content Text",
      "default": "<p>Add your page content here.</p>"
    },
    {
      "type": "header",
      "content": "Collapsible Content"
    },
    {
      "type": "checkbox",
      "id": "open_first_block",
      "label": "Open first collapsible block by default",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "collapsible_row",
      "name": "Collapsible Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Collapsible row"
        },
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "check_mark",
              "label": "Check mark"
            },
            {
              "value": "question_mark",
              "label": "Question mark"
            },
            {
              "value": "star",
              "label": "Star"
            },
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "lightning_bolt",
              "label": "Lightning bolt"
            },
            {
              "value": "leaf",
              "label": "Leaf"
            },
            {
              "value": "fire",
              "label": "Fire"
            }
          ],
          "default": "check_mark",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Content"
        },
        {
          "type": "page",
          "id": "page",
          "label": "Page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Content",
      "blocks": [
        {
          "type": "collapsible_row"
        },
        {
          "type": "collapsible_row"
        },
        {
          "type": "collapsible_row"
        }
      ]
    }
  ]
}
{% endschema %}
