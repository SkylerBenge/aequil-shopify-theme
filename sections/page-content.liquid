{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign content = section.settings.content
  assign image = section.settings.image
  assign desktop_layout = section.settings.desktop_layout
  assign section_id = section.id
-%}

<section class="page-content" id="section-{{ section_id }}">
  <!-- Hero Section with Background Image and Title -->
  <div class="page-content__hero">
    {%- if image -%}
      <!-- Mobile: Background image with title overlay -->
      <div class="page-content__mobile-image" style="background-image: url({{ image | img_url: '1200x800' }});">
        <div class="page-content__mobile-overlay">
          {%- if heading != blank -%}
            <h1 class="page-content__heading">{{ heading }}</h1>
          {%- endif -%}
        </div>
      </div>

      <!-- Desktop: Split layout with background image and content -->
      <div class="page-content__desktop-layout page-content__desktop-layout--{{ desktop_layout }}">
        <div class="page-content__image-section" style="background-image: url({{ image | img_url: '1200x800' }});">
          <div class="page-content__image-overlay">
            {%- if heading != blank -%}
              <h1 class="page-content__heading">{{ heading }}</h1>
            {%- endif -%}
            {%- if subheading != blank -%}
              <h2 class="page-content__subheading">{{ subheading }}</h2>
            {%- endif -%}
            {%- if content != blank -%}
              <div class="page-content__text">{{ content }}</div>
            {%- endif -%}
          </div>
        </div>
        <div class="page-content__blocks-section">
          {%- if section.blocks.size > 0 -%}
            <div class="page-content__blocks">
              {%- for block in section.blocks -%}
                <div class="page-content__accordion" {{ block.shopify_attributes }}>
                  <details
                    id="Details-{{ block.id }}-{{ section.id }}"
                    {% if section.settings.open_first_block and forloop.first %}open{% endif %}
                  >
                    <summary id="Summary-{{ block.id }}-{{ section.id }}">
                      {% render 'icon-accordion', icon: block.settings.icon %}
                      <h3 class="page-content__accordion-title">
                        {{ block.settings.heading | default: block.settings.page.title | escape }}
                      </h3>
                      {{- 'icon-caret.svg' | inline_asset_content -}}
                    </summary>
                    <div
                      class="page-content__accordion-content"
                      id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                      role="region"
                      aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                    >
                      {{ block.settings.row_content }}
                      {{ block.settings.page.content }}
                    </div>
                  </details>
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- else -%}
      <!-- No image: heading, subtitle, and text -->
      <div class="page-content__content-only">
        {%- if heading != blank -%}
          <h1 class="page-content__heading">{{ heading }}</h1>
        {%- endif -%}
        {%- if subheading != blank -%}
          <h2 class="page-content__subheading">{{ subheading }}</h2>
        {%- endif -%}
        {%- if content != blank -%}
          <div class="page-content__text">{{ content }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

  <!-- Mobile: Subtitle, Text, and Collapsible Content Blocks -->
  <div class="page-content__mobile-collapsible">
    <!-- Subtitle and Text Section (mobile only) -->
    {%- if subheading != blank or content != blank -%}
      <div class="page-content__subtitle-section">
        <div class="page-content__subtitle-content">
          {%- if subheading != blank -%}
            <h2 class="page-content__subheading">{{ subheading }}</h2>
          {%- endif -%}
          {%- if content != blank -%}
            <div class="page-content__text">{{ content }}</div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    <!-- Collapsible Blocks -->
    {%- if section.blocks.size > 0 -%}
      <div class="page-content__blocks">
        {%- for block in section.blocks -%}
          <div class="page-content__accordion" {{ block.shopify_attributes }}>
            <details
              id="Details-mobile-{{ block.id }}-{{ section.id }}"
              {% if section.settings.open_first_block and forloop.first %}open{% endif %}
            >
              <summary id="Summary-mobile-{{ block.id }}-{{ section.id }}">
                {% render 'icon-accordion', icon: block.settings.icon %}
                <h3 class="page-content__accordion-title">
                  {{ block.settings.heading | default: block.settings.page.title | escape }}
                </h3>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <div
                class="page-content__accordion-content"
                id="CollapsibleAccordion-mobile-{{ block.id }}-{{ section.id }}"
                role="region"
                aria-labelledby="Summary-mobile-{{ block.id }}-{{ section.id }}"
              >
                {{ block.settings.row_content }}
                {{ block.settings.page.content }}
              </div>
            </details>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* Base Section Styles */
  .page-content {
    width: calc(100% - 40px);
    margin: 20px;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }

  /* Hero Section Styles */
  .page-content__hero {
    position: relative;
    width: 100%;
  }

  /* Mobile Layout - Background image with title overlay */
  .page-content__mobile-image {
    display: block;
    position: relative;
    min-height: 400px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #f5f5f5;
  }

  .page-content__mobile-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    background: rgba(0,0,0,.{{ section.settings.overlay_opacity }});
    padding: 40px 20px 30px;
    color: white;
    text-align: center;
  }

  /* Desktop Layout - Split 50/50 with background image and blocks */
  .page-content__desktop-layout {
    display: none;
    grid-template-columns: 1fr 1fr;
    min-height: 600px;
  }

  .page-content__desktop-layout--left {
    grid-template-areas: "image blocks";
  }

  .page-content__desktop-layout--right {
    grid-template-areas: "blocks image";
  }

  .page-content__image-section {
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 40px;
  }

  .page-content__desktop-layout--left .page-content__image-section {
    grid-area: image;
  }

  .page-content__desktop-layout--right .page-content__image-section {
    grid-area: image;
  }

  .page-content__image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    background: rgba(0,0,0,.{{ section.settings.overlay_opacity }});
    padding: 40px;
  }

  .page-content__blocks-section {
    background: #f9f9f9;
    padding: 60px 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .page-content__desktop-layout--left .page-content__blocks-section {
    grid-area: blocks;
  }

  .page-content__desktop-layout--right .page-content__blocks-section {
    grid-area: blocks;
  }

  /* Content Only Layout */
  .page-content__content-only {
    padding: 80px 20px;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Typography */
  .page-content__heading {
    color: #fff;
    font-weight: bold;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .page-content__subheading {
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    opacity: 0.9;
  }

  .page-content__text {
    line-height: 1.6;
    margin: 0;
  }

  .page-content__text p:last-child {
    margin-bottom: 0;
  }

  /* Mobile Collapsible Section (below hero) */
  .page-content__mobile-collapsible {
    display: block;
    background: #f9f9f9;
  }

  .page-content__subtitle-section {
    padding: 40px 20px;
    text-align: center;
    background: white;
  }

  .page-content__subtitle-section * {
    text-align: center;
  }

  .page-content__subtitle-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .page-content__mobile-collapsible .page-content__blocks {
    padding: 60px 20px;
    max-width: 600px;
    margin: 0 auto;
  }

  .page-content__accordion {
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
  }

  .page-content__accordion:last-child {
    margin-bottom: 0;
  }

  .page-content__accordion summary {
    padding: 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 15px;
    background: white;
    transition: background-color 0.2s ease;
    list-style: none;
  }

  .page-content__accordion summary::-webkit-details-marker {
    display: none;
  }

  .page-content__accordion summary:hover {
    background: #f5f5f5;
  }

  .page-content__accordion-title {
    flex: 1;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .page-content__accordion summary .icon-accordion {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .page-content__accordion summary svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .page-content__accordion[open] summary svg {
    transform: rotate(180deg);
  }

  .page-content__accordion-content {
    padding: 0 20px 20px;
    color: #666;
    line-height: 1.6;
  }

  .page-content__accordion-content p {
    margin-bottom: 1rem;
  }

  .page-content__accordion-content p:last-child {
    margin-bottom: 0;
  }

  /* Tablet Styles */
  @media screen and (min-width: 750px) {
    .page-content__mobile-image {
      display: none;
    }

    .page-content__mobile-collapsible {
      display: none;
    }

  .page-content__subheading {
    color: #fff;
  }

    .page-content__desktop-layout {
      display: grid;
    }

    .page-content__blocks-section {
      padding: 80px 40px;
    }

    .page-content__blocks {
      max-width: 500px;
    }

    .page-content__accordion summary {
      padding: 25px;
    }

    .page-content__accordion-content {
      padding: 0 25px 25px;
    }
  }

  /* Desktop Styles */
  @media screen and (min-width: 990px) {
    .page-content__image-section {
      padding: 100px 60px;
    }

    .page-content__blocks-section {
      padding: 100px 60px;
    }

    .page-content__blocks {
      max-width: 550px;
    }

    .page-content__desktop-layout {
      min-height: 700px;
    }
  }

  /* Large Desktop */
  @media screen and (min-width: 1200px) {
    .page-content__image-section {
      padding: 120px 80px;
    }

    .page-content__blocks-section {
      padding: 120px 80px;
    }

    .page-content__blocks {
      max-width: 600px;
    }
  }
</style>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image",
      "info": "Recommended: 1200x600px or larger"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "Desktop Layout",
      "options": [
        {
          "value": "left",
          "label": "Image Left, Content Right"
        },
        {
          "value": "right",
          "label": "Content Left, Image Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Page Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content Text",
      "default": "<p>Add your page content here.</p>"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "10%",
      "label": "Mobile Overlay Opacity",
      "info": "Controls the darkness of the overlay behind text on mobile",
      "default": 1
    },
    {
      "type": "header",
      "content": "Collapsible Content"
    },
    {
      "type": "checkbox",
      "id": "open_first_block",
      "label": "Open first collapsible block by default",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "collapsible_row",
      "name": "Collapsible Row",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Collapsible row"
        },
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "check_mark",
              "label": "Check mark"
            },
            {
              "value": "question_mark",
              "label": "Question mark"
            },
            {
              "value": "star",
              "label": "Star"
            },
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "lightning_bolt",
              "label": "Lightning bolt"
            },
            {
              "value": "leaf",
              "label": "Leaf"
            },
            {
              "value": "fire",
              "label": "Fire"
            }
          ],
          "default": "none",
          "label": "Icon"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Content"
        },
        {
          "type": "page",
          "id": "page",
          "label": "Page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Content",
      "blocks": [
        {
          "type": "collapsible_row"
        },
        {
          "type": "collapsible_row"
        },
        {
          "type": "collapsible_row"
        }
      ]
    }
  ]
}
{% endschema %}
